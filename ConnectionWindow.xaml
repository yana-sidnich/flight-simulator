        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightGearTestExec"
        xmlns:controls="clr-namespace:FlightGearTestExec.Controls"
        mc:Ignorable="d"
        Title="ConnectionWindow" Height="281" Width="550">
    <Grid
        ShowGridLines="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="275*"></ColumnDefinition>
            <ColumnDefinition Width="275*"></ColumnDefinition>

        </Grid.ColumnDefinitions>

        <controls:connection x:Name="connection" Grid.Column="0"/>
        <controls:FileExplorer x:Name="FileExplorer" Grid.Column="1"/>

    </Grid>
</Window>
