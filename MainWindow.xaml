                    <views:GraphsView x:Name="graphs" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3"/>
                </Grid>
            </ScrollViewer>

            <controls:MediaPlayer Grid.Row="1" x:Name="MediaPlayer" DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Stretch"/>
        </Grid>
    </materialDesign:Card>

