<Window x:Class="FlightGearTestExec.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlightGearTestExec"
        xmlns:controls="clr-namespace:FlightGearTestExec.Controls"
        xmlns:views="clr-namespace:FlightGearTestExec.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1600">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <controls:joystick x:Name="joystick" HorizontalAlignment="Center"
                           VerticalAlignment="Center"    
                           Grid.Row="0" Grid.Column="0"/>

        <controls:connection x:Name="connection" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center"/>

        <GridSplitter HorizontalAlignment="Stretch" ResizeDirection="Columns" Grid.RowSpan="2" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="1" Width="10"/>

        <views:GraphsView x:Name="graphs" Grid.Column="2" Grid.RowSpan="2"/>

    </Grid>
</Window>
