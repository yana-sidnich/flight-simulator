            <!--     Name="viewbox2" -->
            <!--     Stretch="Fill" Grid.Row="2" Grid.Column="2" VerticalAlignment="Top"> -->
            <!--     <controls:MediaPlayer x:Name="MediaPlayer"/> -->
            <!-- </Viewbox> -->

            <GridSplitter HorizontalAlignment="Stretch" ResizeDirection="Columns" Grid.RowSpan="3" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="1" Width="10"/>

            <views:GraphsView x:Name="graphs" Grid.Column="2" Grid.Row="0" Grid.RowSpan="3"/>
        </Grid>
    </materialDesign:Card>

</Window>
