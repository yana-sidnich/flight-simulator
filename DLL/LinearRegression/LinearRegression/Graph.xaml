<UserControl x:Class="LinearRegression.Graph"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LinearRegression"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="450">

    <Grid>
        <Grid.Resources>
            <Style TargetType="{x:Type lvc:CartesianChart}">
                <Setter Property="ZoomMode" Value="None"/>
                <Setter Property="TooltipPosition" Value="Hidden"/>
                <Setter Property="LegendPosition" Value="Hidden"/>
            </Style>
        </Grid.Resources>
        <lvc:CartesianChart x:Name="graph"
                            AnimationsSpeed="{Binding AnimationSpeed}"
                            XAxes="{Binding XAxes}"
                            YAxes="{Binding YAxes}"
                            Series="{Binding seriesCollection}"
                            Width="Auto" Height="Auto">
        </lvc:CartesianChart>

    </Grid>
</UserControl>
