<UserControl x:Class="FlightGearTestExec.Views.TwoFeaturesGraphView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:viewModels="clr-namespace:FlightGearTestExec.ViewModels">

    <UserControl.DataContext>
        <viewModels:TwoFeaturesGraphsViewModel/>
    </UserControl.DataContext>


    <UniformGrid Columns="2" Rows="1">
        <UniformGrid.Resources>
            <Style TargetType="lvc:CartesianChart">
                <Setter Property="ZoomMode" Value="None"></Setter>
                <Setter Property="Width" Value="800"></Setter>
                <Setter Property="Height" Value="800"></Setter>
                <Setter Property="LegendPosition" Value="Hidden"></Setter>
                <Setter Property="TooltipPosition" Value="Hidden"></Setter>
            </Style>
        </UniformGrid.Resources>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="{Binding VM_TwoFeaturesGraphs_SelectedString}"></Label>
            <lvc:CartesianChart DockPanel.Dock="Bottom" Series="{Binding Series_0}"/>
        </DockPanel>
        <DockPanel>
            <Label DockPanel.Dock="Top" Content="{Binding VM_TwoFeaturesGraphs_CorrelatedString}"></Label>
            <lvc:CartesianChart DockPanel.Dock="Bottom" Series="{Binding Series_1}"/>
        </DockPanel>
    </UniformGrid>


</UserControl>